<div class="user">
  <img src="/public/img/user.png" class="user-img">
</div>
<div class="container">
  <div class="form__container">
    <form class="form" action="/user/profile" method="post">
      <div class="name__container">
        <label for="name">Name</label>
        <input type="text" name="name" required="true" value=<%=name%>>
      </div>

      <div class="password__container">
        <label for="old_password">Old Password</label>
        <input type="old_password" name="old_password" placeholder="Old password" required="true">
      </div>

      <div class="password__container">
        <label for="new_password">New Password</label>
        <input type="new_password" name="new_password" placeholder="New password">
      </div>

      <% if((typeof error_msg==="undefined")) {%>
      <div class="error_msg"><span></span></div>
      <%}else {%>
      <div class="error_msg"><span><%= error_msg%></span></div>
      <%}%>

				<div class="signup__container">
					<input type="submit" name="login" value="Update My Account" id="login">
				</div>
			</form>
		</div>
	</div>